{
  "manifest_version": 3,
  "name": "Big Video",
  "version": "1.0",
  "description": "Expands current pages video to full screen on tap.",
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab"],
  "browser_specific_settings": {
    "gecko": {
      "id": "gameonhigh@gmail.com",
      "strict_min_version": "130.0"
    }
  }
}
